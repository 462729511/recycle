/* recycle/pages/sell/sell.wxss */
.sell_contanier{
  width: 95%;
  background-color: #eee;
  margin: 0 auto;
  display: block;
  border-radius: 20rpx;

}
.sell_title{
  width: 100%;
  font-weight: 600;
  font-size: 46rpx;
  padding-left: 30rpx;
  padding-top: 30rpx;
}
.sell_concont{
  width: 70%;
  margin: 73rpx auto;
  border: 5rpx solid orange;
  border-radius: 10rpx;
  height: 60rpx;
  padding-top: 6rpx;
  padding-left: 29rpx;
  position: relative;
  padding-right: 50rpx;
}
.add{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  right: 0;
  top: 3rpx;
  z-index: 99
}
.sell_num{
  width: 77%;
  margin: 46rpx auto;
  border: 5rpx solid orange;
  border-radius: 10rpx;
  height: 200rpx;
  padding-top: 27rpx;
  padding-left: 29rpx;
}
.sell_num textarea{
  width: 90%;
  height: 180rpx
}
.sell_uplond{
  width: 100%;
  text-align: center;
  margin-top: 50rpx;
  height: 415rpx;
}
.sell_imgs{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around
}
.sell_img{
  width: 100rpx;
  height: 100rpx;
}
.sell_uplond text{
  display: block
}
.buy{
  width: 100%;
  position: fixed;
  bottom: 0;
  color: white;
  left: 0;
}
.buy button{
    background-color: green;
    color: white
}
/* 上传图片 */
.close{
  position: relative;
  padding-top: 21rpx;
  width: 20%
}
.delete-btn{
  position: absolute;
  top: 0;
  right: -3%;
  z-index: 90;
  color: red;
  border: 1px solid red;
  height: 30rpx;
  text-align: center;
  line-height: 30rpx;
  border-radius: 50%;
  width: 30rpx
}